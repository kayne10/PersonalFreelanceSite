<section class="intro">

  <header class="products-header">
    <h1>Web Development Templates & Freelance</h1>

    <a class="discover" href="#products">
      <i class="fa fa-angle-double-down"></i>
    </a>

  </header>

</section>

<section class="products" id="products">
  <nav class="navbar navbar-default" id="cd-main-nav">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Logo</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-center">
            <li><a href="/developer">Web Development</a></li>
            <li><a href="/gallery">Gallery</a></li>
            <li><a href="/explore">Blog</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/contact">Contact</a></li>
          </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <a href="/shopping-cart">
            <i class="fa fa-shopping-cart" aria-hidden="true"></i> Shopping Cart
            <span class="badge">{{ session.cart.totalQty }}</span>
            </a>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-user-o" aria-hidden="true"></i> <span class="caret"></span></a>
            <ul class="dropdown-menu">
              {{# if login }}
                <li><a href="/users/profile">User Management</a></li>
                <li><a href="/users/logout">Log out</a></li>
              {{ else }}
                <li><a href="/users/signup">Sign Up</a></li>
                <li><a href="/users/signin">Log in</a></li>
              {{/if}}
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>


  <div class="products-templates">
    <h1>Browse Through My Website Templates</h1>
    <a href="#packages"><button type="button" class="skip">Skip to Freelance Options</button></a>
    <div class="product-wrapper">
        {{# each templates}}
          {{# each this }}
          <div class="col-sm-6 col-md-6">
            <div class="thumbnail">
              <img src="{{ this.imagePath }}" class="img-responsive" alt="...">
              <div class="caption">
                <h3>{{ this.name }}</h3>
                <h5>Features</h5>
                <ul>
                  {{# each features}}
                    <li>{{ this }}</li>
                  {{/each}}
                </ul>
                <h3>${{ this.price }}</h3>
                <a href="/developer/demo/{{this._id}}"><button type="button" class="btn btn-default">Demo</button></a>
                <a href="/add-to-cart/{{this._id}}"><button type="button" class="btn btn-default">Add to Cart</button></a>
              </div>
            </div>
          </div>
          {{/each}}
        {{/each}}
      </div>
    </div>
</section>

