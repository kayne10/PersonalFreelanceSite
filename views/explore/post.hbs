<!-- Individual Post View -->
{{# post}}
<div class="post-view">
  <img src="{{ this.imagePath }}" class="responsive" alt="...">
  <div class="caption">
    <h3>{{ this.title }}</h3>
    <h4>Category: {{ this.category }}</h4>
    <p>
      {{ this.description }}
    </p>
    <!-- sharing options -->
    <div class="share">
      <span class='st_facebook_large' displayText='Facebook'></span>
      <span class='st_twitter_large' displayText='Tweet'></span>
    </div>
  </div>
</div>
{{/ post}}
